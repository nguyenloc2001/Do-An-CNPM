@model Do_An_CNPM.Models.Model.ModelChucVu

@{
    ViewBag.Title = "Details";
}

@using (Html.BeginForm("Details", "ChucVu", FormMethod.Post))
{
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <link href="~/Content/css/lib/themify-icons.css" rel="stylesheet" />
    <link href="~/Content/css/lib/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />

    <div class="content-wrap">
        <div class="main">
            <div class="container-fluid">
                <section id="main-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-title">
                                    <h4>Chi tiết chức vụ</h4>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th scope="col">
                                                        @Html.DisplayNameFor(model => model.TenChucVu)
                                                    </th>
                                                    <th scope="col">
                                                        @Html.DisplayNameFor(model => model.MaChucVu)
                                                    </th>
                                                    <th scope="col">
                                                        @Html.DisplayNameFor(model => model.GhiChu)
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td class="text-dark">
                                                        @Html.DisplayFor(model => model.TenChucVu)
                                                    </td>
                                                    <td class="text-dark">
                                                        @Html.DisplayFor(model => model.MaChucVu)
                                                    </td>
                                                    <td class="text-dark">
                                                        @Html.DisplayFor(model => model.GhiChu)
                                                    </td>
                                                    <td class="text-center">
                                                        <button type="button" class="btn btn-sm btn-primary m-l-5 p-0">
                                                            <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "ChucVu", new { id = Model.ID })">
                                                                <i class="fas fa-edit">&nbsp;Sửa</i>
                                                            </a>
                                                        </button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- /# card -->
                        </div>
                        <!-- /# column -->
                    </div>
                    <!-- /# row -->
                </section>
            </div>
        </div>
    </div>
}