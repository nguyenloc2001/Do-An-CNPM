@model Do_An_CNPM.Models.Model.ModelNguoiDung

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit","NguoiDung",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="content-wrap">
            <div class="main">
                <div class="container-fluid">
                    <section id="main-content">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-title">
                                        <h4>Cập nhật chức vụ</h4>
                                    </div>
                                    <div class="card-body">
                                        @*start row 1*@
                                        <div class="row">
                                            <div class="col-3">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.HoVaTen, htmlAttributes: new { @class = "control-label row-12" })
                                                        <div class="row-12">
                                                            @Html.EditorFor(model => model.HoVaTen, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.HoVaTen, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.MaNhanVien, htmlAttributes: new { @class = "control-label row-12" })
                                                        <div class="row-12">
                                                            @Html.EditorFor(model => model.MaNhanVien, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.MaNhanVien, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.PhongBanId, htmlAttributes: new { @class = "control-label row-12" })
                                                        <div class="row-12">
                                                            @Html.EditorFor(model => model.PhongBanId, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.PhongBanId, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.ChucVuId, htmlAttributes: new { @class = "control-label row-12" })
                                                        <div class="row-12">
                                                            @Html.EditorFor(model => model.ChucVuId, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.ChucVuId, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @*end row 1*@

                                        @*start row 2*@
                                        <div class="row">
                                            <div class="col-3">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "control-label row-12" })
                                                        <div class="row-12">
                                                            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", @type = "phone" } })
                                                            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label row-12" })
                                                        <div class="row-12">
                                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label row-12" })
                                                        <div class="row-12">
                                                            @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                                            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.NgayBatDauLamViec, htmlAttributes: new { @class = "control-label row-12" })
                                                        <div class="row-12">
                                                            @Html.EditorFor(model => model.NgayBatDauLamViec, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                                            @Html.ValidationMessageFor(model => model.NgayBatDauLamViec, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @*end row 2*@

                                        @*start row 3*@
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="form-group ml-3 mr-3">
                                                    @Html.LabelFor(model => model.QuyenId, htmlAttributes: new { @class = "control-label row-12" })
                                                    <div class="row-12">
                                                        @Html.EditorFor(model => model.QuyenId, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.QuyenId, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @*end row 3*@

                                        <div class="form-group text-center">
                                            <button type="button" class="btn btn-info">
                                                <a style="color:black;" href="@Url.Action("View", "ChucVu")">
                                                    <i class="ti-menu-alt">&nbsp;Xem DS</i>
                                                </a>
                                            </button>
                                            <button class="ml-2 btn btn-info" type="submit">
                                                <i class="ti-trash" value="Edit">&nbsp;Cập nhật</i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <!-- /# card -->
                            </div>
                            <!-- /# column -->
                        </div>
                        <!-- /# row -->
                    </section>
                </div>
            </div>
        </div>
    </div>
}
